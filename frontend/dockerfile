FROM node:alpine AS build
WORKDIR /app

COPY ./frontend/package.json .

RUN npm install --force

COPY ./frontend .

ENV WATCHPACK_POLLING=true

COPY ./frontend/.env.production .env

EXPOSE 3000

CMD ["npm", "start"]
